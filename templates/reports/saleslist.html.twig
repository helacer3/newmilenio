{% extends 'base.html.twig' %}

{% block content %}
    {% block body %}
	<div class="row">
		<div class="col-12 mt-3">
			{% if cstOrders|length > 0 %}
				<table class="table">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Order Number</th>
							<th scope="col">Order Request</th>
							<th scope="col">Customer Name</th>
							<th scope="col">Value</th>
							<th scope="col">Created Date</th>
							<th scope="col">Updated Date</th>
							<th scope="col">Status</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{% for order in cstOrders %}
							<tr>
								<th scope="row">{{order.id}}</th>
								<th scope="row">{{order.orderNumber}}</th>
								<th scope="row">{{order.idRequest}}</th>
								<th scope="row">{{order.customerName}}</th>
								<th scope="row">{{order.value|number_format(0)}}</th>
								<th scope="row">{{order.createdAt|date('Y-m-d H:i:s')}}</th>
								<th scope="row">{{order.updatedAt|date('Y-m-d H:i:s')}}</th>
								<th scope="row">
									{{ order.status }}
								</th>
								<th scope="row">
									{% if order.status != 'PAYED' %}
										<a href="{{ path('resume_store', {'id': order.idProduct }) }}">INTENTAR PAGO</a>
									{% endif %}
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% else %}
				<div class="alert alert-info">No tiene Ã³rdenes en el sistema</div>
			{% endif %}
		</div>
	</div>
    {% endblock %}
{% endblock %}